@using SimpleFormsService.Web.Admin.Resources

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @StringResource.App_Title</title>
    <link href="https://novascotia.ca/clf/ignition/favicon.ico" rel="icon" type="image/x-icon" />
    <link rel="apple-touch-icon-precomposed" href="https://novascotia.ca/clf/ignition/shortcut.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-grid.min.css" />   
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/saltire.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <partial name="_Header" /> <!-- Header -->
    <div class="container SiteContent">
        <!-- main -->
        <main id="main">
            <div>
                <div class="row m-b-md m-t-md">
                    <div class="col-sm-12">
                        <h1>@Html.Raw(@StringResource.App_Title)</h1>
                    </div>
                </div>

                @{ RenderBody(); }
                @RenderSection("featured", required: false)
            </div>
        </main>
    </div>>
    <!-- End of main -->

    <partial name="_Footer" />  @*Footer*@

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>