@page
@model CCSReviewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using SimpleFormsService.Web.Public.Forms.Shared
@using SimpleFormsService.Web.Public.Forms.ChildCareSubsidyReview;

@{
    ViewData["Title"] = StringResource.PageTitle;
}
@section featured
{
    <section class="row ns-fieldset stickyFooter" id="ccsr">
        <div class="col-xs-12 col-md-9">
            <h1 class="mb-5">@StringResource.PageTitle</h1>
            <form method="post" asp-antiforgery="true">
                <div class="row form-group">
                    <div class="col-sm-10">
                        <label asp-for="CCSReview.CaseWorker" class="nslabel"></label>
                        <select asp-for="CCSReview.CaseWorker" asp-items="Model.CaseWorkers()" class="dropdown fw-20">
                            <option value="">@StringResource.Dropdown_Default</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CCSReview.ApplicantEmail" class="nslabel"></label>

                    <div class="help-block text-danger ns-error-message">
                        <i class="fa fa-exclamation-circle error-indicator errorAlert" aria-hidden="true"></i>
                        <span asp-validation-for="CCSReview.ApplicantEmail"></span>
                    </div>
                    <input type="text" asp-for="CCSReview.ApplicantEmail" data-val="true" value="" class="ns-input fw-20" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label asp-for="CCSReview.ApplicantName" class="nslabel"></label>

                    <input asp-for="CCSReview.ApplicantName" class="ns-input fw-20" autocomplete="off" />
                </div>

                <hr />
                <div class="form-group mb-0" id="ccsrUpload">
                    <h2>@Html.Raw(StringResource.CCSR_Submission)</h2>
                    <div class="help-block text-danger ns--message ns-error-message">
                        <i class="fa fa-exclamation-circle error-indicator errorAlert" aria-hidden="true"></i>
                    </div>
                    <label for="uploadDoc" class="btn-lg btn-default ns-upload" aria-describedby="fileDescription">
                        @SharedResource.Label_Upload
                        <input type="file" id="uploadDoc" class="ns-upload-button" asp-for="CCSReview.File" multiple accept=".pdf,.jpeg,.jpg" />
                    </label>

                    <div id="fileDescription" class="nshinttext mt-0">
                        <p class="mt-0 mb-0">@Html.Raw(StringResource.AcceptedUploadType)</p>
                        <p>@Html.Raw(StringResource.MaxFileSize)</p>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-sm-12">
                        <input type="submit" id="ccsFormSubmit" class="btn-default btn-lg ml-5" value="@SharedResource.Btn_Submit" />
                    </div>
                </div>
            </form>
        </div>
    </section>
}
